{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "text"
    },
    "Content": {
      "type": "richtext"
    },
    "PublishedDate": {
      "type": "datetime",
      "required": true
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Published"
      ],
      "required": true
    },
    "Slug": {
      "type": "uid",
      "required": true
    },
    "Cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "writer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::writer.writer",
      "inversedBy": "articles"
    }
  }
}
